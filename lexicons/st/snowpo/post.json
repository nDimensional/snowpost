{
	"lexicon": 1,
	"id": "st.snowpo.post",
	"defs": {
		"main": {
			"type": "record",
			"description": "Record linking to a Markdown file.",
			"key": "tid",
			"record": {
				"type": "object",
				"required": ["content", "createdAt"],
				"properties": {
					"content": {
						"type": "blob",
						"accept": ["text/markdown"],
						"maxSize": 1000000
					},
					"previewText": {
						"type": "string",
						"maxLength": 300,
						"description": "Display title or preview text"
					},
					"createdAt": {
						"type": "string",
						"format": "datetime",
						"description": "Client-declared timestamp when this post was originally created."
					},
					"updatedAt": {
						"type": "string",
						"format": "datetime",
						"description": "Client-declared timestamp when this post was last updated."
					},
					"commentRoot": {
						"type": "string",
						"format": "at-uri",
						"description": "A Bluesky post to use as the comment root"
					}
				}
			}
		}
	}
}
